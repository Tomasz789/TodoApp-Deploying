@using Todo.Domain.Entities

@model TodoTask

<h1>Details of: @Model.Title</h1>

<div class="col-9 text-center">
    <div class="card">
        <div class="card-header">
            <h1>@Model.Title</h1>
        </div>
        <div class="card-body">
            <p>@Model.Description</p>
        </div>
        <div class="card-footer">
            <p>Due date: @Model.EndDate</p>
            <p>Status: @Model.Status</p>
            <p>Priority: @Model.Priority</p>
            <p>Last updated: @Model.Updated</p>
        </div>
    </div>
    <div class="d-flex">
        <a class="btn btn-success m-1" asp-action="Complete" asp-controller="Task" asp-route-id="@Model.Id">Complete</a>
        <a class="btn btn-primary m-1" asp-action="Details" asp-controller="List" asp-route-id="@Model.TodoList.Id">Back</a>
    </div>
</div>