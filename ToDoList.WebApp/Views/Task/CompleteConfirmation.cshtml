@using Todo.Domain.Entities
@model TodoTask
@{
    ViewData["Title"] = "Remove task list";
}
<div class="col-12 text-center">
    <h1>Complete task @Model.Title.</h1>
    <form class="border" method="post">
        <h2>Complete the task?</h2>
        <button class="btn btn-danger mb-1" asp-action="RemoveConfirmation" asp-controller="List" asp-route-id="@Model.Id">Ok</button>
        <a class="btn btn-success mb-1" asp-controller="List" asp-action="Details" asp-route-id="@Model.TaskListId">No</a>
    </form>
</div>
