@using ToDoList.WebApp.Models.ViewModels
@model UpdateTaskListViewModel

@{
    ViewData["Title"] = "Edit list";
}

<h1 class="border">You're editing list </h1>

<div class="col-6">
    <form method="post" class="col-6 m-1 border" asp-route-title="Title" asp-route-description="Description">
        <label asp-for="Title"></label>
        <input type="text" asp-for="Title" />
        <span class="text-danger" asp-validation-for="Title"></span>
        <label asp-for="Description"></label>
        <textarea asp-for="Description"></textarea>
        <span class="text-danger" asp-validation-for="Description"></span>
        <div class="d-flex col-6">
        <button type="submit" class="btn btn-success m-1">Update</button>
        <a class="btn btn-danger m-1" asp-controller="List" asp-action="Index">Back</a>
    </div>
    </form>
</div>