@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> signInManager;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Task App</title>
    <link rel="icon" href="appimg/icon.ico" type="image/x-icon" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
</head>
<body>
    <nav class="navbar-expand-lg bg-success p-1 mb-5">
        <ul class="navbar-nav ml-2">
            <li class="nav-item">
                <a class="nav navbar-brand text-white" href="#">
                   <strong>TodoApp</strong>
                </a>
            </li>
             <li class="nav-item">
                <a class="nav navbar-brand text-white" asp-controller="Home" asp-action="Index">
                    Home
                </a>
            </li>
             <li class="nav-item">
                <a class="nav navbar-brand text-white" asp-controller="List" asp-action="Index">
                    Lists
                </a>
            </li>
            <li class="nav-item dropdown ml-auto mr-5">
                @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item ml-9 mr-1 text-white" style="font-size:24px">
                            <a class="nav-link dropdown-toogle text-white" href="#" id="navRemainders" role="button" data-toggle="dropdown" ariaaria-haspopup="true" aria-expanded="false">
                                 <i class="bi bi-bell"></i>
                            </a>
                            <div class="dropdown-menu text-dark" aria-labelledby="navRemainders">
                                <a href="#" class="dropdown-item">A</a>
                                <a href="#" class="dropdown-item">B</a>
                            </div> 
                        </li>
                    }
             <li class="nav-item dropdown">
                 <a class="nav-link dropdown-toogle text-white" id="navAccount" href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                     <i class="bi bi-justify" style="font-size:24px"></i>
                 </a>

                <div class="dropdown-menu text-dark mr-5" aria-labelledby="navAccount">

                     @if (User.Identity.IsAuthenticated)
                     {
                        <a class="dropdown-item" asp-controller="Account" asp-action="Register">
                            My Account
                        </a>
                        <a class="dropdown-item" asp-controller="List" asp-action="Index">
                            My lists
                        </a>
                        <div class="dropdown-divider"></div>
                        <form method="post" asp-controller="Account" asp-action="Logout">
                            <button class="dropdown-item" type="submit">Logout</button>
                        </form>
                    }
                    else
                    {
                        <a class="dropdown-item" asp-controller="Account" asp-action="Register">
                            Login
                        </a>
                        <a class="dropdown-item" asp-controller="Account" asp-action="Register">
                            Register
                        </a>
                    }
                </div>
            </li>
           
        </ul>
       
    </nav>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - ToDoList.WebApp - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
