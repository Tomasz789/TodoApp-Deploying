@using ToDoList.WebApp.Models.AppUserViewModels
@model AppUserViewModel


<form method="post">
    <div class="form-group p-2 m-2">
        <label asp-for="FirstName"></label>
        <input type="text" asp-for="FirstName"/>
        <span class="text-danger m-1" asp-validation-for="FirstName"></span>
   </div>
   <div class="form-group p-2 m-2">
        <label asp-for="LastName"></label>
        <input type="text" asp-for="LastName"/>
        <span class="text-danger m-1" asp-validation-for="LastName"></span>
   </div>
   <div class="form-group p-2 m-2">
        <label asp-for="City"></label>
        <input type="text" asp-for="City"/>
        <span class="text-danger" asp-validation-for="City"></span>
    </div>
    <div class="form-group p-2 m-2">
        <label asp-for="Country"></label>
        <input type="text" asp-for="Country"/>
        <span class="text-danger" asp-validation-for="Country"/>
    </div>
    <div class="form-group p-2 m-2">
        <label asp-for="BirthDate"></label>
        <input type="date" asp-for="BirthDate"/>
    </div>
    <div class="form-group p-2 m-2">
        <label asp-for="PhotoPath"></label>
        <input id="user-photo" type="file" asp-for="PhotoPath"/>
    </div>
    <button type="submit" asp-action="Edit" asp-controller="Account" class="btn btn-success">Save</button>
</form>

@section Scripts{
    <script>
        $(document).ready(function(){
            $("#user-photo").on("change", function(){
                var fileName = $(this).val().split("\\").pop();
                $(this).next("#user-photo").html(fileName);
            });
        });
    </script>
}
