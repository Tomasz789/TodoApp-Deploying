@using ToDoList.WebApp.Models.ViewModels
@model UpdateShoppingListViewModel

<h1 class="border">Updating shopping list</h1>

<div class="col-6">
    <form method="post" class="col-6 m-1 border" asp-route-title="Title" asp-route-description="Description">
        <label asp-for="Title"></label>
        <input type="text" asp-for="Title" />
        <span class="text-danger" asp-validation-for="Title"></span>
        <label asp-for="Description"></label>
        <textarea asp-for="Description"></textarea>
        <span class="text-danger" asp-validation-for="Description"></span>
        <label asp-for="DueDate"></label>
        <input type="datetime-local" asp-for="DueDate" />
        <span class="text-danger" asp-validation-for="DueDate"></span>
        <div class="d-flex col-6">
        <button type="submit" class="btn btn-success m-1">Edit</button>
        <a class="btn btn-danger m-1" asp-controller="List" asp-action="Index">Back</a>
    </div>
    </form>
</div>